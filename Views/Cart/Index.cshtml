
@{
    ViewData["Title"] = "Home Page";
    List<Products> products = (List<Products>)ViewData["data"];
    List<Cart> CurrentCart = (List<Cart>)ViewData["cartdetail"];

}
@{

    foreach (Cart item in CurrentCart)
    {
        <div class='item'>
            @*<img class="img" src="@item.Products.ImageUrl">*@
            <p class='productName'>@item.Products.Name   </p>
            <p class='productPrice'>$@item.ProductPrice</p>
            <form action="/ProductGallery/AddtoCart/@item.Products.Id" class="addCart" method="post">
                <input type="submit" value="Add to Cart" name="productName">
            </form>
        </div>
    }
}

@{
    if (CurrentCart == null)
    {
        <div align="center">
            <span style="font-size:32px">
                Nothing in your cart! 
                Continue to shopping by clicking <a href="/ProductGallery">here</a>)
            </span>
        </div>
    }
    else
    {
        <div align="right" style="font-size: 26px; font-weight:bold; margin-right:25px;">
            Total: SDG: <span id="cTotal">
                @{
                    double sum = 0.00;
                    foreach (Cart item in CurrentCart)
                    {
                        sum = sum + item.ProductPrice * item.ProductQty;
                    }
                    string total = $"${sum:#,0.00}";
                }
                @total
            </span>
            <br /><br />
        </div>
    }}
