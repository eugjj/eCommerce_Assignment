<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body margin="15px">
    <div class="container">
        <main role="main" class="pb-3">
            <div style="height:70px;">
                <div class="container">
                    @if (ViewData["username"] == null)
                    {
                        <div class="hello">Hello, Guest</div>
                        <div class="navbar">
                            <a class="@ViewData["Home"] placeholder" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: underline">Home</a>
                            &nbsp;|&nbsp;
                            <a class="@ViewData["Login"]" asp-area="" asp-controller="Login" asp-action="Index" style="text-decoration: underline">Login</a>
                        </div> 
                        
                     }
                    
                     else
                     {
                        <div class="hello" id="hellouser"> Hello, @ViewData["username"]</div>
                        <div class="navbar">
                            <a class="@ViewData["Home"]" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: underline;">Home</a>
                            &nbsp;|&nbsp;
                            <a class="@ViewData["My Purchases"]" asp-area="" asp-controller="MyPurchases" asp-action="Index" style="text-decoration: underline;">My Purchases</a>
                             &nbsp;|&nbsp;
                             <a class="@ViewData["Login"]" asp-area="" asp-controller="Logout" asp-action="Index" style="text-decoration: underline;">Logout</a>

                        </div>
                     }


                </div>
            </div>
            @RenderBody()
        </main>
    </div>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - SA54 Team 7 ASP.NET Core CA
                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
</body>
</html>
