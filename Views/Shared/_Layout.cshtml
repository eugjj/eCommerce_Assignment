<body margin="10px">
    <div class="container">
        <main role="main" class="pb-3">
            <div style="height:70px;">
                <div class="container">
                    @if (Context.Request.Cookies["username"] == null)
                    {
                        <div class="hello">Hello, Guest</div>
                        <div class="topbar">
                            <a class="@ViewData["Home"]" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: underline">Home</a>
                            &nbsp;|&nbsp;
                            <a class="@ViewData["Login"]" asp-area="" asp-controller="Login" asp-action="Index" style="text-decoration: underline">Login</a>
                        </div>

                    }

                    else
                    {
                        <div class="hello" id="hellouser"> Hello, @Context.Request.Cookies["username"]</div>
                        <div class="topbar">
                            <a class="@ViewData["Home"]" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: underline;">Home</a>
                            &nbsp;|&nbsp;
                            <a class="@ViewData["My Purchases"]" asp-area="" asp-controller="MyPurchases" asp-action="Index" style="text-decoration: underline;">My Purchases</a>
                            &nbsp;|&nbsp;
                            <a class="@ViewData["Login"]" asp-area="" asp-controller="Logout" asp-action="Index" style="text-decoration: underline;">Logout</a>

                        </div>
                    }


                </div>
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SA54 Team 7 ASP.NET Core CA
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
