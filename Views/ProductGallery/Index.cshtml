<div>
    <table>
        @for (int i = 0; i < products.Count; i++)
        {
            @if (i % 3 == 0)
            {
                @:<tr>
                }
            <td>
                <div>
                    <div>
                        <a href="/ProductGallery/ProductDetail/@products[i].Id">
                            <img height="240" width="240" src="@products[i].ImageUrl" alt="OfficePhoto" />
                        </a>
                    </div>
                    <p>@products[i].Name</p>

                    <p>@products[i].Brand</p>
                    <p>@products[i].Price</p>

                </div>
            </td>

            @if ((i + 1) % 3 == 0)
            {
            @:</tr>
        }
        }
    </table>
</div>
